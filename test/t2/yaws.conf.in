</server>

<server localhost>
        port = 8009
        listen = 0.0.0.0
        appmods = </, throwtest>
</server>

<server localhost>
        port = 8010
        listen = 0.0.0.0
        docroot = @abs_top_srcdir@/www
        index_files = index.html /testdir
</server>

<server localhost>
        port = 8011
